#!/bin/bash

# Check if all required parameters are provided
if [ $# -lt 4 ]; then
    echo "Usage: $0 PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

# Assign parameters to variables
FILE_PATH=$1
IP_ADDRESS=$2
USERNAME=$3
SSH_KEY=$4

# Transfer file using scp
scp -i "$SSH_KEY" -o StrictHostKeyChecking=no "$FILE_PATH" "$USERNAME@$IP_ADDRESS":~/ || { echo "File transfer failed."; exit 1; }

echo "File transferred successfully to $USERNAME@$IP_ADDRESS:~/"
